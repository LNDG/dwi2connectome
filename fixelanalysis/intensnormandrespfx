#!/bin/bash
#file: intensitynormandrespfx
#usage: intensitynormandrespfx $WORKDIR $OUTDIR

WORKDIR=$1
OUTDIR=$2

mkdir -p ${WORKDIR}/${OUTDIR}
mkdir -p ${WORKDIR}/${OUTDIR}/DWI
mkdir -p ${WORKDIR}/${OUTDIR}/Masks
mkdir -p ${WORKDIR}/${OUTDIR}/DWInorm

nargs=$#

if [ "$nargs" == 2 ]; then
	DATADIR=${WORKDIR}/Diff
else
	DATADIR=${WORKDIR}/$3
fi

cd ${WORKDIR}/${OUTDIR}

find ${DATADIR}/* -maxdepth 0 -type d | awk -F "/" '{print $NF}' > ${WORKDIR}/${OUTDIR}/scans.txt

for subj in `cat ${WORKDIR}/${OUTDIR}/scans.txt`; do
rsync ${DATADIR}/${subj}/biascorr.mif ${WORKDIR}/${OUTDIR}/DWI/${subj}_DWI.mif
rsync ${DATADIR}/${subj}/biasmeanb0bet_mask.nii.gz ${WORKDIR}/${OUTDIR}/Masks/${subj}_Mask.nii.gz
done

echo "NumberOfThreads: 10" > /home/$USER/.mrtrix.conf
echo "TmpFileDir: /beegfs/scratch/tnc_scratch/kfo_pd_connectome/PD_connectome/tmp" > /home/$USER/.mrtrix.conf

dwiintensitynorm ${WORKDIR}/${OUTDIR}/DWI ${WORKDIR}/${OUTDIR}/Masks ${WORKDIR}/${OUTDIR}/DWInorm ${WORKDIR}/${OUTDIR}/fa_template.mif ${WORKDIR}/${OUTDIR}/fa_template_wm_mask.mif -tempdir . -nocleanup -force -nthreads 10

rm /home/$USER/.mrtrix.conf

foreach -10 ${WORKDIR}/${OUTDIR}/DWInorm/*DWI.mif : dwi2tensor IN ${WORKDIR}/${OUTDIR}/DWInorm/UNI_dt.mif -mask ${WORKDIR}/${OUTDIR}/Masks/UNI_Mask.nii.gz -nthreads 10 -force

foreach -10 ${WORKDIR}/${OUTDIR}/DWInorm/*dt.mif : tensor2metric IN -fa ${WORKDIR}/${OUTDIR}/DWInorm/UNI_fa.nii -mask ${WORKDIR}/${OUTDIR}/Masks/UNI_Mask.nii.gz -nthreads 10 -force

foreach -10 ${WORKDIR}/${OUTDIR}/DWInorm/*dt.mif : tensor2metric IN -adc ${WORKDIR}/${OUTDIR}/DWInorm/UNI_md.nii -mask ${WORKDIR}/${OUTDIR}/Masks/UNI_Mask.nii.gz -nthreads 10 -force


mkdir -p ${WORKDIR}/${OUTDIR}/FODS

foreach -10 ${WORKDIR}/${OUTDIR}/DWInorm/*DWI.mif : dwi2response dhollander IN ${WORKDIR}/${OUTDIR}/FODS/UNI_wm.txt ${WORKDIR}/${OUTDIR}/FODS/UNI_gm.txt ${WORKDIR}/${OUTDIR}/FODS/UNI_csf.txt -mask ${WORKDIR}/${OUTDIR}/Masks/UNI_Mask.nii.gz -nthreads 10 -force 

rm ${WORKDIR}/${OUTDIR}/FODS/avg_wm_resp.txt

rm ${WORKDIR}/${OUTDIR}/FODS/avg_csf_resp.txt

average_response ${WORKDIR}/${OUTDIR}/FODS/*wm.txt ${WORKDIR}/${OUTDIR}/FODS/avg_wm_resp.txt

average_response ${WORKDIR}/${OUTDIR}/FODS/*csf.txt ${WORKDIR}/${OUTDIR}/FODS/avg_csf_resp.txt

foreach -10 ${WORKDIR}/${OUTDIR}/DWInorm/*DWI.mif : dwi2fod msmt_csd IN ${WORKDIR}/${OUTDIR}/FODS/avg_wm_resp.txt ${WORKDIR}/${OUTDIR}/FODS/UNI_wm.mif ${WORKDIR}/${OUTDIR}/FODS/avg_csf_resp.txt ${WORKDIR}/${OUTDIR}/FODS/UNI_csf.mif -nthreads 1 -force -mask ${WORKDIR}/${OUTDIR}/Masks/UNI_Mask.nii.gz
